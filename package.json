{
    "name": "timespeaker",
    "version": "1.0.0",
    "description": "A Nuxt 4 application that generates and serves audio files with the current time in multiple languages",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "nuxt build",
        "build:timeout": "timeout 180 npx nuxt build || true",
        "dev": "nuxt dev",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "test": "vitest run",
        "test:integration": "vitest run tests/integration",
        "test:e2e": "playwright test",
        "lint": "prettier --check .",
        "lint:fix": "prettier --write ."
    },
    "dependencies": {
        "@nuxt/ui": "^4.2.1",
        "@nuxtjs/color-mode": "^4.0.0",
        "@tailwindcss/vite": "^4.1.17",
        "@unhead/vue": "^2.0.19",
        "@vite-pwa/nuxt": "^1.1.0",
        "nuxt": "^4.2.1",
        "tailwindcss": "^4.1.17",
        "typescript": "^5.9.3",
        "vue": "^3.5.25",
        "vue-router": "^4.6.3"
    },
    "devDependencies": {
        "@nuxt/test-utils": "^3.20.1",
        "@playwright/test": "^1.49.1",
        "@vue/test-utils": "^2.4.6",
        "happy-dom": "^15.11.7",
        "prettier": "^3.7.3",
        "vitest": "^3.2.4",
        "vue-tsc": "^3.1.5"
    }
}
